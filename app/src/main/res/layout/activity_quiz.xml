<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz"
    android:background="@drawable/zadombg_quiz">

    <TextView
        android:id="@+id/pont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" Pontok : 0"
        android:textAlignment="center"
        android:textSize="20dp"



        />

    <TextView
        android:id="@+id/kerdes"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_above="@id/valasz1"
        android:text="Kerdesek"
        android:textAlignment="center"
        android:textSize="20dp" />



    <Button
        android:id="@+id/valasz1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/quiz_button"


        />
    <Button
        android:id="@+id/valasz2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/valasz1"
        android:background="@drawable/quiz_button"

        />
    <Button
        android:id="@+id/valasz3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/valasz2"
        android:background="@drawable/quiz_button"

        />
    <Button
        android:id="@+id/valasz4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/valasz3"
        android:background="@drawable/quiz_button"

        />
    </RelativeLayout>